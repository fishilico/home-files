# Run a command without any proxy configured

unset ALL_PROXY
unset FTP_PROXY
unset HTTP_PROXY
unset HTTPS_PROXY
unset RSYNC_PROXY
unset all_proxy
unset ftp_proxy
unset http_proxy
unset https_proxy
unset rsync_proxy

if [ $# -ge 1 ]
then
    exec "$@"
else
    echo >&2 "Launching ${SHELL:-sh} without any proxy"
    exec "${SHELL:-sh}"
fi
