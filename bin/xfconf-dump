#!/bin/sh
# Dump xfconf configuration

# Use locale-independent sort
export LC_ALL=C

IS_FIRST=true
for CHANNEL in $(xfconf-query --list |sed '1{/^.*:/d}' |sort)
do
    if $IS_FIRST
    then
        IS_FIRST=false
    else
        echo ""
    fi
    echo "[$CHANNEL]"
    xfconf-query --channel "$CHANNEL" --list --verbose |sort
done
