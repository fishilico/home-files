# Update pulled Docker images

# shellcheck shell=dash

set -o pipefail

docker images | \
    awk '{ if(NR > 1 && ($1 ~ /^gentoo\/stage3-/ || $1 ~ /^sabayon\/base-/ || $1 ~ /^archlinux$/ || $1 ~ /^archlinux\/archlinux$/ || $2 != "latest") && $2 != "<none>")print $1 ":" $2 }' | \
    xargs -r -L1 docker pull
